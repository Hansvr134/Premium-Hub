local Tab = Window:CreateTab("üè† Main", nil)
local Section = Tab:CreateSection("Main Hub")


local Section = Tab:CreateSection("Player Setting")

local player = game.Players.LocalPlayer
local camera = workspace.CurrentCamera

local connection -- buat referensi supaya bisa disconnect ketika toggle dimatikan

local Toggle = Tab:CreateToggle({
   Name = "Unlock Camera",
   CurrentValue = false,
   Flag = "UnlockCamera",
   Callback = function(Value)
      if Value then
         -- ketika toggle dihidupkan
         connection = game:GetService("RunService").RenderStepped:Connect(function()
             player.CameraMaxZoomDistance = 1000
             player.CameraMinZoomDistance = 0.5
             player.CameraMode = Enum.CameraMode.Classic

             if camera.CameraSubject ~= player.Character:FindFirstChildWhichIsA("Humanoid") then
                 camera.CameraSubject = player.Character:FindFirstChildWhichIsA("Humanoid")
             end
         end)
      else
         -- ketika toggle dimatikan
         if connection then
             connection:Disconnect()
             connection = nil
         end

         -- reset ke default Roblox
         player.CameraMaxZoomDistance = 10
         player.CameraMinZoomDistance = 0.5
         player.CameraMode = Enum.CameraMode.LockFirstPerson -- atau Classic, tergantung game
         if player.Character and player.Character:FindFirstChildWhichIsA("Humanoid") then
             camera.CameraSubject = player.Character:FindFirstChildWhichIsA("Humanoid")
         end
      end
   end,
})

local Tab = Window:CreateTab("üó∫Ô∏èTeleport", nil)
local Section = Tab:CreateSection("Main Teleport")
local Button = Tab:CreateButton({
   Name = "üöÜ Teleport ke Kereta Terdekat",
   Callback = function()
      local player = game.Players.LocalPlayer
      local character = player.Character or player.CharacterAdded:Wait()
      local hrp = character:WaitForChild("HumanoidRootPart")

      local closestTrain = nil
      local shortestDistance = math.huge

      for _, v in pairs(workspace.Terrain:GetDescendants()) do
         if v:IsA("Model") and v:FindFirstChildWhichIsA("BasePart") then
            if v.Name:lower():find("train") then
               local part = v.PrimaryPart or v:FindFirstChildWhichIsA("BasePart")
               local dist = (hrp.Position - part.Position).Magnitude
               if dist < shortestDistance then
                  shortestDistance = dist
                  closestTrain = part
               end
            end
         end
      end

      if closestTrain then
         hrp.CFrame = closestTrain.CFrame + Vector3.new(0, 5, 0)
         warn("‚úÖ Teleport ke kereta terdekat berhasil")
      else
         warn("üö´ Tidak menemukan kereta di Terrain")
      end
   end,
})

